{
    "compilerOptions": {
        "declaration": true,
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "node16",
        "rootDir": "../",
        "outDir": "../lib",
        "noEmit": false,
        "removeComments": false,
        "noImplicitAny": true,
        "noImplicitOverride": false,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": false,
        "allowImportingTsExtensions": false,
        "strictNullChecks": true,
        "typeRoots": ["types"],
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "../node_modules",
        "../lib/**/*",
        "../src/**/*"
    ]
}